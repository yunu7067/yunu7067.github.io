---
import type {SocialConfigType, AvatarConfigType} from '@types';
import Avatar from './Avatar.astro';
import SocialIcon from './SocialIcon';

export interface Props {
  avatar?: AvatarConfigType;
  title?: string;
  description?: string;
  socials?: SocialConfigType[];
}

const props = Astro.props as Props;
---

<header class='w-full'>
  <div class='max-w-3xl w-full my-4 flex flex-col items-center mx-auto font-light text-gray-700 dark:text-gray-200'>
    {props.avatar && props.avatar.enabled && <Avatar src={props.avatar.src} alt='avatar' />}
    {props.title && <h1 class='mt-2 text-3xl'>{props.title}</h1>}
    {props.description && <p class='dark:text-gray-300'>{props.description}</p>}
    {
      props.socials && (
        <div class='p-1 flex flex-row flex-wrap text-xl'>
          {props.socials.map(social => (
            <SocialIcon social={social} />
          ))}
        </div>
      )
    }
  </div>
</header>
