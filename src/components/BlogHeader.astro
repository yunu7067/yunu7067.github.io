---
import { BlogConfigType, ThemeIdentifiers } from "@types";
import { btn } from "./classes";
import { SearchLine, StackLine } from "./icons";
import ThemeButton from './ThemeButton';

export interface Props {
	config: BlogConfigType
}
const { config } = Astro.props as Props;
---

<header class="py-5 w-full flex flex-row items-center justify-between">
	<h1 class="m-0 text-2xl">
		<a href="/" aria-label="Home">
			<span>{config.title || "Home"}</span>
		</a>
	</h1>
	<nav class="flex-none flex flex-row gap-2">

		<a href="/p/about/" class={btn} aria-label="About">
			About
			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="1em" height="1em">
				<path fill="none" d="M0 0h24v24H0z" />
				<path fill="currentColor"
					d="M7.291 20.824L2 22l1.176-5.291A9.956 9.956 0 0 1 2 12C2 6.477 6.477 2 12 2s10 4.477 10 10-4.477 10-10 10a9.956 9.956 0 0 1-4.709-1.176zm.29-2.113l.653.35A7.955 7.955 0 0 0 12 20a8 8 0 1 0-8-8c0 1.334.325 2.618.94 3.766l.349.653-.655 2.947 2.947-.655zM7 12h2a3 3 0 0 0 6 0h2a5 5 0 0 1-10 0z" />
			</svg>
		</a>
		{ config.theme === "auto" &&
		<ThemeButton client:load config={config} /> }
		<a href="/series/" class={btn} aria-label="Series">
			<!-- Series -->
			<StackLine />
		</a>
		<a href="/search/" class={btn} aria-label="Search">
			<!-- Search -->
			<SearchLine />
		</a>
	</nav>
</header>